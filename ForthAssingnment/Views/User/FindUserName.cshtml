@model ForthAssignment.Core.Aplication.Models.User.UserModel
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 mb-4">
            <div class="card shadow-lg p-5">
                <div class="row">
                    <div class="col-md-4 d-flex justify-content-center align-items-center">
                        <img src="@Url.Content(Model.ProfileImageUrl ?? "/Images/default-profile/default.png")" class="img-fluid rounded-circle" alt="Profile Picture" style="max-width: 250px;">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h1 class="card-title display-4">@Model.UserName</h1>
                            
                            <p class="card-text"><strong>Name:</strong> @Model.Name @Model.LastName</p>
                            <p class="card-text"><strong>Email:</strong> @Model.Email</p>
							<form method="post" asp-action="SaveANewFriend" asp-controller="UserFriend">
								<input type="hidden" class="visually-hidden" name="usernameOfRequest" value="@Model.UserName" />
                                <input type="hidden" name="UserFriendId" value="@Model.Id" />
                                <button type="submit" class="btn btn-primary btn-lg mt-3">Befriend</button>
                            </form>
                            <a href="@Url.Action("Index", "UserFriend")" class="btn btn-secondary btn-lg mt-3">Go Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>