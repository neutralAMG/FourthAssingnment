@model ForthAssignment.Core.Aplication.Models.Post.PostModel;

<div>
    <form method="post" asp-controller="Post" asp-action="DeletePost">
        <input type="hidden" name="SeriesId" value="@Model.Id" />
        <h1>Are you sure you want to delete this Post?</h1>
        <button type="submit" class="btn btn-danger float-end p-2">Delete</button>
        <a asp-controller="Post" asp-action="index" class="btn btn-outline-warning float-end p-2 mx-2">Go Back</a>
    </form>
</div>