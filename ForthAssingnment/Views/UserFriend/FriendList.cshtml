@using ForthAssingnment.Presentation.WepApp.Models
@model UserFriendViewModel;

@if (Model != null && Model.Users.Count > 0)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-center">Friends List</h5>
            <ul class="list-group">
                @foreach (var friend in Model.Users)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <img src="@Url.Content(friend.ProfileImageUrl ?? "/Images/default-profile/default.png")" alt="Profile Picture" class="rounded-circle" width="40" height="40">
                            <span class="ml-2">@friend.UserName</span>
                        </div>
                        <div>
                            <a href="@Url.Action("DeleteUserFriend", "UserFriend", new { id = Model.UsersFriends.Where( u => u.UserFriendId == friend.Id).FirstOrDefault().Id })" type="button" class="btn btn-sm btn-outline-danger">Delete</a>

                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
}
else
{
    <p>No friends to display.</p>
}